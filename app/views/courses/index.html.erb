<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.description %></td>
        <td><%= course.user_id %></td>
        <td><%= link_to 'See course', course %></td>
        <% if user_signed_in? and course.user_id == current_user.id %>
          <td><%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <% if user_signed_in? and course.subscriptions.exists?(user_id: current_user.id) %>
            <td>Subscribed</td>
          <% else %>
            <td>
              <%= form_with(model: [ course, course.subscriptions.build ], local: true) do |form| %>
                <%= form.submit 'Subscribe' %>
              <% end %>
            </td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

