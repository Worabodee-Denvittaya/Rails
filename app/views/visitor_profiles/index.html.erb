<p id="notice"><%= notice %></p>

<h1>Visitor Profiles</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Citizen</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @visitor_profiles.each do |visitor_profile| %>
      <tr>
        <td><%= visitor_profile.first_name %></td>
        <td><%= visitor_profile.last_name %></td>
        <td><%= visitor_profile.citizen_id %></td>
        <td><%= visitor_profile.user_id %></td>
        <td><%= link_to 'Show', visitor_profile %></td>
        <td><%= link_to 'Edit', edit_visitor_profile_path(visitor_profile) %></td>
        <td><%= link_to 'Destroy', visitor_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

