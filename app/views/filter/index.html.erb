<p id="notice"><%= notice %></p>

<table>
  <tr>
    <%= form_tag(results_filter_index_path, method: "get") do %>
      <td><%= label_tag("Filter by student details") %></td>

      <td><%= label_tag(:first_name, "| First name:") %></td>
      <td><%= text_field_tag(:first_name) %></td>

      <td><%= label_tag(:last_name, "Last name:") %></td>
      <td><%= text_field_tag(:last_name) %></td>

      <td><%= label_tag(:student_id, "Student ID:") %></td>
      <td><%= text_field_tag(:student_id) %></td>

      <td><%= submit_tag("Filter") %></td>
    <% end %>
  </tr>
  <tr>
    <%= form_tag(results_filter_index_path, method: "get") do %>
      <td><%= label_tag("Or filter by Groups") %></td>
      <td><%= label_tag(:group_name, "| Group Name:") %></td>
      <td><%= text_field_tag(:group_name) %></td>

      <td><%= submit_tag("Filter") %></td>
    <% end %>
  </tr>
</table>

<strong class="text-danger">*If the filter button does not respond please refresh the page.*</strong><br>

<% if @student_profiles.size > 1 %>
  <h2>Found <%= @student_profiles.size %> students</h2><br>
<% else %>
  <h2>Found <%= @student_profiles.size %> student</h2><br>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Citizen ID</th>
      <th>Student ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_profiles.each do |student_profile| %>
      <tr>
        <td><%= student_profile.first_name %></td>
        <td><%= student_profile.last_name %></td>
        <td><%= student_profile.citizen_id %></td>
        <td><%= student_profile.student_id %></td>
        <td><%= link_to 'Show', student_profile %></td>
        <td><%= link_to 'Edit', edit_student_profile_path(student_profile) %></td>
        <td><%= link_to 'Destroy', student_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a new student', new_student_path %>
